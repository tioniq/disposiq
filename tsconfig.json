{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "types": ["node", "jest"],
    "moduleResolution": "node",

    "allowJs": false,
    "checkJs": true,

    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "useUnknownInCatchVariables": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "stripInternal": true,

    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "lib": [
      "es6",
      "es2021.weakref"
    ]
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "esm": true,
    "files": true,
    "transpileOnly": true,
    "experimentalResolver": true,
    "experimentalSpecifierResolution": "node",
    "allowImportingTsExtensions": true
  }
}
